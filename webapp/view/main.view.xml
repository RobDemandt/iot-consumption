<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data" controllerName="odataconsumption.controller.main" displayBlock="true" class="sapUiSizeCompact" height="100%">
	<App>
		<pages>
			<Page title="SAP &amp; Deloitte IoT Asset Monitor">
				<content>
					<Panel id="__panel1">
						<content>
							<Image width="140px" height="140px" id="__image0"/>
							<Label text="Excavators" width="100%" id="__label6" design="Bold" textAlign="Center"/>
						    <HBox width="100%" id="__hbox2" height="320px">
						        <items>
						            <VBox width="40%" direction="Column" id="__vbox0" height="310px">
						                <items>
						                    <Text text="Machine: Lego Excavator I" id="__text4"/>
						                    <Text text="Location: Eindhoven" id="__text5"/>
						                </items>
						            </VBox>
						            <VBox width="60%" direction="Column" id="__vbox1" height="310px">
						                <items>
						                    <Image width="100%" height="90%" id="__image1" src="https://i.imgur.com/oM20eH7.jpg" activeSrc="https://www.freepik.com/free-photo/excavator-on-a-land-under-construction_1162876.htm"/>
						                </items>
						            </VBox>
						        </items>
						    </HBox>
						</content>
					</Panel>

					<TileContainer id="container" tileDelete="handleTileDelete" tiles="{TileModel>/TileCollection}" size="M" height="300px">
						<StandardTile id="tile" icon="sap-icon://{TileModel>icon}" type="{TileModel>type}" number="{TileModel>number}" numberUnit="{TileModel>numberUnit}" title="{TileModel>title}" info="{TileModel>info}" press="pressKepesertaan"
							infoState="{TileModel>infoState}"/>
					</TileContainer>
					<layout:FixFlex id="chartFixFlex" minFlexSize="250">
						<layout:fixContent>
							<Panel xmlns="sap.m" width="100%">
								<HBox>
									<form:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" editable="true" class="editableForm" backgroundDesign="Transparent">
										<form:content>
											<Label text="{i18n>LBL_DEVICES}" required="true"/>
											<HBox width="100%">
												<Select items="{devices>/}" selectedKey="{viewModel>/selectedDeviceId}" change="onDeviceChange" enabled="{ path: 'devices>/', formatter: '.formatSelectEnablement' }" tooltip="{i18n>TOOLTIP_DEVICES}" width="100%">
													<core:Item key="{devices>id}" text="{devices>name}"/>
													<layoutData>
														<FlexItemData growFactor="1"/>
													</layoutData>
												</Select>
												<Button icon="sap-icon://refresh" press="onRefreshDevicesPressed" class="sapUiTinyMarginBegin" tooltip="{i18n>TOOLTIP_REFRESH_DEVICES}"/>
											</HBox>
											<Label text="{i18n>LBL_MESSAGE_TYPE}" required="true"/>
											<Select items="{viewModel>/messageTypes}" selectedKey="{viewModel>/selectedMessageTypeId}" change="onMessageTypeChange" enabled="{ path: 'viewModel>/messageTypes', formatter: '.formatSelectEnablement' }" tooltip="{i18n>TOOLTIP_MESSAGE_TYPES}">
												<core:Item key="{viewModel>id}" text="{viewModel>name}"/>
											</Select>
											<Label text="{i18n>LBL_MEASURES}" required="true"/>
											<MultiComboBox id="measureSelection" items="{viewModel>/measures}" selectionChange="onMeasureSelectionChanged" enabled="{ path: 'viewModel>/', formatter: '.formatSelectEnablement' }" tooltip="{i18n>TOOLTIP_MEASURE}" valueState="Error" valueStateText="{i18n>ERROR_NO_MEASURE_SELECTED}">
												<core:Item key="{viewModel>position}" text="{viewModel>name}"/>
											</MultiComboBox>
											<Label text="Labelhuihiuhihihiuhiuiuhi" width="100%" id="__label11"/>
										</form:content>
										<form:layoutData>
											<FlexItemData growFactor="3"/>
										</form:layoutData>
									</form:SimpleForm>
									<form:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="0" emptySpanM="0" columnsL="1"
										columnsM="1" editable="true" class="editableForm" backgroundDesign="Transparent"  visible="false">
										<form:content>
											<Label text="{i18n>LBL_AUTO_REFRESH_CHART}"/>
											<Switch id="autoRefreshSwitch" state="{viewModel>/autoRefresh}" change="onAutoRefreshChanged"/>
											<Label text="{i18n>LBL_VALUE_COUNT}"/>
											<RadioButtonGroup buttons="{viewModel>/shownValueCounts}" columns="{= ${viewModel>/shownValueCounts}.length}" selectedIndex="{ path: 'viewModel>/shownValueCount', type: 'odataconsumption.ShownValueCountToIndexConverter' }" select="onShownValueCountChanged">
												<RadioButton text="{viewModel>}"/>
											</RadioButtonGroup>
										</form:content>
										<form:layoutData>
											<FlexItemData growFactor="1"/>
										</form:layoutData>
									</form:SimpleForm>
								</HBox>
							</Panel>
						</layout:fixContent>
						<layout:flexContent>
							<viz:VizFrame id="idVizFrame" height="100%" width="100%" vizType="timeseries_line" uiConfig="{applicationSet:'fiori'}">
								<viz:feeds>
									<viz.feeds:FeedItem uid="timeAxis" type="Dimension" values="timestamp"/>
								</viz:feeds>
							</viz:VizFrame>
						</layout:flexContent>
					</layout:FixFlex>
				</content>
			</Page>
		</pages>
	</App>
</core:View>